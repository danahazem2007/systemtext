        <Label x:Name="password" Content="password" HorizontalAlignment="Left" Margin="29,180,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Button x:Name="login" Content="login" HorizontalAlignment="Left" Margin="489,266,0,0" VerticalAlignment="Top" FontSize="22" Click="login_Click"/>
        <Label Content="log in" HorizontalAlignment="Left" Margin="339,26,0,0" VerticalAlignment="Top" FontSize="30"/>
        <PasswordBox Name="passU" HorizontalAlignment="Left" Margin="212,189,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Page>
